<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#ffcf69">
    <Button
            android:text="@string/log_drink"
            android:layout_width="157dp"
            android:layout_height="51dp"
            android:id="@+id/log_a_drink_btn" android:typeface="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="visible"
            tools:visibility="visible"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@id/main_image" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:background="@drawable/rounded_corners_logo"
            app:fontFamily="@font/pacifico"
    />
    <Button
            android:text="@string/view_hist"
            android:layout_width="157dp"
            android:layout_height="51dp"
            android:id="@+id/view_data_btn"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible" tools:visibility="visible"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/log_a_drink_btn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:background="@drawable/rounded_corners_logo"
            app:fontFamily="@font/pacifico"
    />
    <ImageView
            android:id="@+id/main_image"
            android:layout_width="163dp"
            android:layout_height="163dp"
            app:srcCompat="@drawable/coffeemug"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="205dp"
            app:layout_constraintBottom_toTopOf="@+id/log_a_drink_btn"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_corners_logo"
    />
</androidx.constraintlayout.widget.ConstraintLayout>