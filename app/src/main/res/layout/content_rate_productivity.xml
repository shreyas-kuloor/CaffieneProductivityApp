<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RateProductivityActivity"
        android:background="#915809">

    <TextView
            android:id="@+id/rate_productivity_text"
            android:layout_width="300dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rating_num_text"
            android:layout_marginBottom="75dp"
            android:layout_marginTop="175dp"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="75dp"
            app:fontFamily="@font/pacifico"
            android:gravity="center_horizontal"
            android:text="@string/rating_prompt"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
    />
    <TextView
            android:id="@+id/rating_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rate_productivity_text"
            app:layout_constraintBottom_toTopOf="@id/rate_productivity_slider"
            android:textSize="36sp"
            app:fontFamily="@font/pacifico"
            app:layout_constraintHorizontal_bias="0.498"
            android:textColor="#FFFFFF"
    />
    <SeekBar
            android:id="@+id/rate_productivity_slider"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rating_num_text"
            app:layout_constraintBottom_toTopOf="@id/submit_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="10dp"
            android:max="4"
            android:layout_marginTop="20dp"
            android:theme="@style/Widget.AppCompat.SeekBar.Discrete"
            android:thumbTint="#FFFFFF"
            android:progressTint="#FFFFFF"
    />

    <Button
            android:text="Submit"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/submit_button"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="125dp"
            app:fontFamily="@font/pacifico"
            app:layout_constraintTop_toBottomOf="@id/rate_productivity_slider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_corners_main_button"
    />
</androidx.constraintlayout.widget.ConstraintLayout>