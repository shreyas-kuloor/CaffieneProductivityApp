<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_log_drink"
        tools:context=".LogDrinkActivity" android:background="#A3633D">
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="200dp" app:srcCompat="@drawable/smallcup"
            android:id="@+id/small_coffee_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:scaleType="fitEnd" android:layout_marginBottom="236dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/rounded_corners"
            />
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="200dp" app:srcCompat="@drawable/mediumcup"
            android:id="@+id/med_coffee_btn"
            app:layout_constraintEnd_toStartOf="@+id/lrg_coffee_btn" android:layout_marginEnd="8dp"
            android:layout_marginRight="4dp" app:layout_constraintStart_toEndOf="@+id/small_coffee_btn"
            android:layout_marginLeft="4dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.489" android:scaleType="fitEnd" android:layout_marginBottom="236dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/rounded_corners"
    />
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="200dp" app:srcCompat="@drawable/largecup"
            android:id="@+id/lrg_coffee_btn"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:scaleType="fitEnd" android:layout_marginBottom="236dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/rounded_corners"
            />
    <TextView
            android:text="@string/drink_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choose_size" app:fontFamily="@font/pacifico"
            android:textSize="24sp" app:layout_constraintBottom_toTopOf="@+id/med_coffee_btn"
            android:layout_marginBottom="48dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintVertical_bias="0.728"
            android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>